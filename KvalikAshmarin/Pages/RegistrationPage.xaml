<Page x:Class="KvalikAshmarin.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KvalikAshmarin.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid>
        <Grid>
            <TextBlock HorizontalAlignment="Left" Margin="364,96,0,0" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top" />
            <TextBox x:Name="LoginTb" HorizontalAlignment="Left" Margin="325,117,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" />
            <TextBlock HorizontalAlignment="Left" Margin="360,140,0,0" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Top"/>
            <TextBox x:Name="PasswordTb" HorizontalAlignment="Left" Margin="325,161,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
            <Button x:Name="RegBtn" Content="Зарегистрироваться" HorizontalAlignment="Left" Margin="325,240,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.893,-1.328" Click="RegBtn_Click" Height="22" Width="120"/>
            <TextBlock HorizontalAlignment="Left" Margin="366,186,0,0" TextWrapping="Wrap" Text="Имя" VerticalAlignment="Top"/>
            <TextBox x:Name="NameTb" HorizontalAlignment="Left" Margin="325,207,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>

        </Grid>
    </Grid>
</Page>
